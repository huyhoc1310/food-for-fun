<nav class="navbar navbar-expand-md">
  <div class="container">
    <%= link_to t(".brand"), root_path, class: "navbar-brand" %>
    <div class="collapse navbar-collapse text-center justify-content-center"
         id="navbar3SupportedContent">
      <ul class="navbar-nav">
        <li class="nav-item mx-3">
          <%= link_to t(".home"), root_path, class: "nav-link text-dark" %>
        </li>
        <% if logged_in? && is_manager? %>
          <li class="nav-item mx-2">
            <%= link_to t(".restaurants"), manager_restaurants_path,
              class: "nav-link text-dark" %>
          </li>
          <li class="nav-item mx-2">
            <%= link_to t(".new_food"), new_food_path,
              class: "nav-link text-dark" %>
          </li>
          <li class="nav-item mx-2">
            <%= link_to t(".orders"), manager_orders_path, class: "nav-link text-dark" %>
          </li>
        <% elsif logged_in? && is_admin? %>
          <li class="nav-item mx-2">
            <%= link_to t(".restaurants"), admin_restaurants_path,
              class: "nav-link text-dark" %>
          </li>
        <% elsif logged_in? && is_user? %>
          <li class="nav-item mx-2">
            <%= link_to t(".foods"), foods_path, class: "nav-link text-dark" %>
          </li>
          <li class="nav-item mx-2">
            <%= link_to order_details_path, class: "nav-link text-dark" do %>
              <i class="fa fa-shopping-cart" aria-hidden="true" style="font-size:24px">
              </i>
            <% end %>
          </li>
          <li class="nav-item mx-2">
            <%= link_to t(".orders"), user_orders_path, class: "nav-link text-dark" %>
          </li>
        <% else %>
          <li class="nav-item mx-2">
            <%= link_to t(".foods"), foods_path, class: "nav-link text-dark" %>
          </li>
        <% end %>
        <li><%= render "search/form" %></li>
        <li><%= render "restaurants/filter_form" %></li>
      </ul>
    </div>
  </div>
  <div class="float-right">
    <%= link_to t(".signup"), signup_path,
                class: "btn navbar-btn btn-secondary mx-2 shadowed" %>
    <% if logged_in? %>
      <div class="btn-group">
        <%= link_to "#", class: "btn btn-outline-success dropdown-toggle",
          :"data-toggle" => "dropdown" do %>
          <%= t "accounts.account" %><b class="caret"></b>
        <% end %>
        <div class="dropdown-menu">
          <%= link_to t("accounts.profile"), current_user, class: "dropdown-item" %>
          <div class="dropdown-divider"></div>
          <%= link_to t("accounts.logout"), logout_path, class: "dropdown-item",
            method: :delete %>
        </div>
      </div>
    <% else %>
      <%= link_to t("layouts.header.signin"), signin_path,
        class: "btn btn-success navbar-btn" %>
    <% end %>
  </div>
</nav>
