<nav class="navbar navbar-expand-md">
  <%= link_to t(".brand"), root_path, class: "navbar-brand" %>
  <div class="collapse navbar-collapse"
       id="navbar3SupportedContent">
    <ul class="navbar-nav">
      <li class="nav-item mx-2">
        <%= link_to root_path, class: "nav-link text-dark" do %>
          <i class="fa fa-home" style="font-size: 24px" data-toggle="tooltip", title="Home"></i>
        <% end %>
      </li>
      <% if logged_in? && is_admin? %>
        <li class="nav-item mx-2">
          <%= link_to t(".users"), admin_users_path,
                      class: "nav-link text-dark" %>
        </li>
      <% end %>
      <% if logged_in? && is_manager? %>
        <li class="nav-item mx-2">
          <%= link_to manager_restaurants_path,
            class: "nav-link text-dark" do %>
            <%= t ".restaurants" %>&nbsp;<i class="fa fa-cutlery"></i>
          <% end %>
        </li>
        <li class="nav-item mx-2">
          <%= link_to new_food_path,
            class: "nav-link text-dark" do %>
            <%= t ".new_food" %>&nbsp;<i class="fa fa-plus-circle"></i>
          <% end %>
        </li>
        <li class="nav-item mx-2">
          <%= link_to manager_orders_path, class: "nav-link text-dark" do %>
            <%= t ".orders" %>&nbsp;<i class="fa fa-pencil"></i>
          <% end %>
        </li>
        <li class="nav-item mx-2">
          <%= link_to manager_notifications_path, class: "nav-link text-dark" do %>
            <i class="fa fa-bell" data-toggle="tooltip" title="Notification orders success"></i>
            <% end %>
        </li>
      <% elsif logged_in? && is_admin? %>
        <li class="nav-item mx-2">
          <%= link_to t(".restaurants"), admin_restaurants_path,
            class: "nav-link text-dark" %>
        </li>
      <% elsif logged_in? && is_user? %>
        <li class="nav-item mx-2">
          <%= link_to t(".foods"), foods_path, class: "nav-link text-dark" %>
        </li>
        <li class="nav-item mx-2">
          <%= link_to order_details_path, class: "nav-link text-dark" do %>
            <i class="fa fa-shopping-cart" aria-hidden="true" data-toggle="tooltip" title="Products in your cart">
            </i>
          <% end %>
        </li>
        <li class="nav-item mx-2">
          <%= link_to t(".orders"), user_orders_path, class: "nav-link text-dark" %>
        </li>
      <% else %>
        <li class="nav-item mx-2">
          <%= link_to t(".foods"), foods_path, class: "nav-link text-dark" %>
        </li>
      <% end %>
      <% unless logged_in? && is_admin? %>
        <li class="nav-item mx-2"><%= render "search/form" %></li>
      <% end %>
      <li class="nav-item mx-2"><%= render "restaurants/filter_form" %></li>
    </ul>
  </div>
  <div class="float-right">
    <% if current_user.blank? %>
      <%= link_to t(".signup"), signup_path, class: "btn navbar-btn btn-secondary mx-2 shadowed" %>
    <% end %>

    <% if logged_in? %>
      <div class="btn-group">
        <%= link_to "#", class: "btn btn-outline-success dropdown-toggle",
          :"data-toggle" => "dropdown" do %>
          <%= t "accounts.account" %><b class="caret"></b>
        <% end %>
        <div class="dropdown-menu">
          <%= link_to t("accounts.profile"), current_user, class: "dropdown-item" %>
          <div class="dropdown-divider"></div>
          <%= link_to t("accounts.logout"), logout_path, class: "dropdown-item",
            method: :delete %>
        </div>
      </div>
    <% else %>
      <%= link_to t("layouts.header.signin"), signin_path,
        class: "btn btn-success navbar-btn" %>
    <% end %>
  </div>
</nav>
