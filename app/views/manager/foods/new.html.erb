<div class="row">
  <div class="col-md-12" style="text-align: center;">
    <h1><strong><%= t "food.title.create" %></strong></h1>
  </div>
  <div class="col-md-6 form-group" id="new_food">
    <%= form_for [:manager, @restaurant, @food] do |f| %>

      <%= f.label :name, t("food.label.name"), class: "required" %>
      <%= f.text_field :name, required: true, class: "form-control" %>

      <%= f.label :category, t("food.label.category"), class: "required" %>
      <%= link_to new_manager_restaurant_category_path(@restaurant),
        class: "btn pull-right" do %>
        <i class="fa fa-plus">&nbsp;<%= t ".category" %></i>
      <% end %>
      <%= f.collection_select :category_id, @categories,
          :id, :name, {prompt: "Select category"}, required: true,
          class: "form-control" %>

      <%= f.label :description, t("food.label.description"), class: "required" %>
      <%= f.text_area :description, required: true, class: "form-control" %>

      <%= f.label :price, t("food.label.price"), class: "required" %>
      <%= f.number_field :price, required: true, class: "form-control" %>

      <%= f.fields_for :images do |img| %>
        <%= f.label :image, t("food.label.image"), class: "required" %>
        <%= img.file_field :image, accept: Settings.accept_img, required: true %>
      <% end %>

      <%= f.submit t("food.submit.create"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
