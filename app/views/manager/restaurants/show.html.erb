<%= link_to new_manager_restaurant_category_path(@restaurant), remote: true,
            class: "btn btn-primary rounded-circle sticky-top" do %>
  <i class="fa fa-plus" data-toggle="tooltip" title="Category"></i>
<% end %>

<h1 class="text-center"></h1>

<h1 class="text-center"><%= @restaurant.name %></h1>
<p class="lead text-center"><%= t ".revenue_chart" %></p>
<%= line_chart get_revenue_per_day @restaurant %>
<p class="lead text-center"><%= t ".most_ordered" %></p>
<%= column_chart get_most_ordered_foods @restaurant %>
