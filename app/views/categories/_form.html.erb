<%= form_for [:restaurant, @category], remote: true do |f| %>
  <%= f.label :name, class: "required" %>
  <%= f.text_field :name, required: true, class: "form-control" %>

  <%= f.label :sub_category_of %>
  <%= f.collection_select :parent_id, @categories,
      :id, :name, {prompt: "Select category"}, class: "form-control" %>

  <%= f.fields_for :images do |image| %>
    <%= image.label :image, class: "required" %><br>
    <%= image.file_field :image, accept: Settings.accept_img %>
  <% end %>

  <%= f.submit yield(:button_text), class: "btn btn-secondary col-md-3" %>
<% end %>
